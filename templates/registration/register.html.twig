{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container text-center my-3">

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté(e) en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">M'inscrire</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="form-floating my-3">
			{{ form_widget(registrationForm.email) }}
			<label for="inputEmail">Email</label>
		</div>
		<div class="form-floating my-3">
			{{ form_widget(registrationForm.plainPassword) }}
			<label for="inputEmail">Mot de passe</label>
		</div>
		<div class="form-floating my-3">
			{{ form_widget(registrationForm.confirmPassword) }}
			<label for="inputEmail">Confirmez votre mot de passe</label>
		</div>
		{{ form_widget(registrationForm.agreeTerms) }}

		<button type="submit" class="btn btn-primary">S'enrengistrer</button>
		<div class="my-5">
			<p>Déjà inscrit ?
				<a href="{{ path('app_login') }}">Se connecter</a>
			</p>
		</div>
	</div>
{% endblock %}
