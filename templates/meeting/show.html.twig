{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ meeting.name }}</td>
            </tr>
            <tr>
                <th>Start_time</th>
                <td>{{ meeting.startTime ? meeting.startTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_time</th>
                <td>{{ meeting.endTime ? meeting.endTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ meeting.score ? meeting.score|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Win_condition</th>
                <td>{{ meeting.winCondition }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ meeting.createdAt ? meeting.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_meeting_index') }}">back to list</a>

    <a href="{{ path('app_meeting_edit', {'id': meeting.id}) }}">edit</a>

{% endblock %}
